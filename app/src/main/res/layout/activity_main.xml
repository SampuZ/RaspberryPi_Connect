<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="shompu.rasberrypi_connect.MainActivity">

    <EditText
        app:layout_constraintBottom_toTopOf="@id/testbtn"
        android:id="@+id/testText"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="29dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/testbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Connect2"
            android:text="Send Command"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="104dp" />
        <Button
            android:id="@+id/testbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Mount"
            android:text="Mount"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="104dp" />
        <Button
            android:id="@+id/testbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Unmount"
            android:text="Unmount"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="104dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="107dp" />

</LinearLayout>
